# Server Configuration
PORT=8080
ENV=development
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# API Configuration
API_VERSION=v1

# Database Configuration - Read-Write (Primary)
DB_RW_HOST=localhost
DB_RW_PORT=5432
DB_RW_USER=postgres
DB_RW_PASSWORD=your_password_here
DB_RW_NAME=saham_db
DB_RW_SCHEMA=public
DB_RW_MAX_CONNECTIONS=25
DB_RW_MAX_IDLE=10

# Database Configuration - Read-Cache (Read Replica/Cache)
# If not specified, will fallback to RW settings
DB_RC_HOST=localhost
DB_RC_PORT=5432
DB_RC_USER=postgres
DB_RC_PASSWORD=your_password_here
DB_RC_NAME=saham_db
DB_RC_SCHEMA=public
DB_RC_MAX_CONNECTIONS=25
DB_RC_MAX_IDLE=10

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# External APIs (for future use)
# STOCK_API_KEY=your_api_key_here
# STOCK_API_URL=https://api.example.com